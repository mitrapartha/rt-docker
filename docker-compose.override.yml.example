version: "3.8"

services:
  rt:
    restart: "no"
    deploy:
      mode: replicated
      replicas: 1
    depends_on:
      - db

  cron:
    restart: "no"
    depends_on:
      - db

  nginx:
    restart: "no"

  db:
    image: postgres:13
    environment:
      POSTGRES_DB: rt
      POSTGRES_USER: rt
      POSTGRES_PASSWORD: password
    volumes:
      - vol_db:/var/lib/postgresql/data
    ports:
      - "127.0.0.1:5432:5432"
    networks:
      - net

  phppgadmin:
    image: "docker.io/bitnami/phppgadmin:7"
    environment:
      DATABASE_HOST: "db"
    ports:
      - "127.0.0.1:8081:8080"
      - "127.0.0.1:8443:8443"
    depends_on:
      - db
    networks:
      - net

volumes:
  vol_db: {}
